{% extends "layout.html.twig" %}
{% block headtitle %}{{ parent() }}- News{% endblock %}
{% block head %}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
{% endblock %}
{% block body %}
    {% for message in app.session.flashbag.get('fullbookeddate') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
     {% endfor %}
    <div class="container">
        <div class="col-md-12" style="padding-bottom: 30px;">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="car-title">Information</h5>
                    <p class="card-text">Les reduction sont réservé aux catégories suivantes: étudiant, employé du musée, Ministère de la culture, militaire, sous présentation d'un justificatifs </p>
                </div>
            </div>
        </div>
    </div>

    {% block form %}
        <div class="container">
            <form method="post">
                <div class="well" align="center">
                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_label(form.date, 'Date de réservation', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_widget(form.date, {'attr': {'class': 'datepicker-book'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.mail, 'Adresse Email', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_widget(form.mail, {'attr': {'class': 'foo' }}) }}
                    </div>

                    <div class="tickets" align="left">
                        <div class="form-group">
                            <div class="row" style="margin-bottom: 30px; margin-top: 30px;">
                                <ul class="list-group">
                                    <li class="list-group-item"><div class="col-lg-12">{{form(form.tickets)}}</div></li>
                                    <a href="#" id="add_ticket" class="btn btn-default"><button type="button" class="btn btn-outline-primary">Ajouter un Ticket</button></a>
                                </ul>
                            </div>

                            {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>

                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </form>
        </div>
{% endblock %}
{% endblock %}
{% block script %}
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.9.2/i18n/jquery.ui.datepicker-fr.min.js'></script>
    <script src='{{ asset('js/booking.js') }}'></script>
    <script src='{{ asset('js/datepicker.js') }}'></script>
{% endblock %}